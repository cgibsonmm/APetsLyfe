.modal.fade#profileModal{ 'tabindex': "-1", 'role': "dialog", 'aria-labelledby': "profileModalLabel", 'aria-hidden': "true"}
  .modal-dialog.modal-lg{'role': "document"}
    .modal-content
      .modal-header
        %h5.modal-title#profileModalLabel Crop Image
        %button.close{'type': "button", 'data-dismiss': "modal", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;

      .modal-body
        %form#form{'method': 'post'}
          %input#upload{'type': 'file', 'value': 'chose a file'}
          #upload-demo
          %input#imagebase64{'type': 'hidden', 'name': 'imagebase64'}
        #upload-demo

      .modal-footer
        %button.btn.btn-secondary{'type': "button", 'data-dismiss': "modal"} Close
        %button.btn.btn-success.upload-result{'type': "button"} Save changes
